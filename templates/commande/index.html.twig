{% extends 'base.html.twig' %}

{% block title %}Ma commandes !{% endblock %}

{% block content %}
<h1>Ma commande</h1>
<p>Choisissez votre mode et adresse de livraison !!</p>
<hr>
<div class="row">
        <div class="col-md-6">
         {% set formHtml %}
        {{form_start(form,{action:path('app_commande_recap')})}}
         {{form_end(form)}}
          {% endset %}
          {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
   
        </div>
         <div class="col-md-6">
          {% for product in panier %}
          <div class="row mb-4 mt-4">
          <div class="col-2"><img src="/uploads/{{ product.product.photo}}" alt="{{ product.product.name}}" height="75"></div>
           <div class="co-6 my-auto">{{product.product.name}}</div>
           <div class="col-2 my-auto"> x {{product.quantity}}</div>
          </div>
          
          

          {% endfor %}

        </div>
</div>
{% endblock %}
